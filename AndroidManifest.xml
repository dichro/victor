<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="to.rcpt.lamplighter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" 
        android:allowBackup="false">
        <activity
            android:name="to.rcpt.lamplighter.miki.LivingRoomActivity"
            android:label="@string/title_activity_single_light"
            android:taskAffinity="to.rcpt.lamplighter.miki.LivingRoomActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="to.rcpt.lamplighter.miki.BedroomActivity"
            android:label="@string/title_activity_bedroom" 
            android:taskAffinity="to.rcpt.lamplighter.miki.BedroomActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        </application>

</manifest>