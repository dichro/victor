<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lamplighter="http://lamplighter.rcpt.to/"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/top"
    android:orientation="vertical"
    >
    <RadioGroup android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <to.rcpt.lamplighter.PostingRadioButton android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On"
        lamplighter:target="state"
        lamplighter:arg="1"
        />
    <to.rcpt.lamplighter.PostingRadioButton android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        lamplighter:target="state"
        lamplighter:arg="0"
        />
    </RadioGroup>
    <to.rcpt.lamplighter.PostingButton
        android:text="All Off"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
	  android:textSize="20pt"
 	  android:textStyle="bold"
        />
    <to.rcpt.lamplighter.SliderBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        lamplighter:target="state"
        />
    <to.rcpt.lamplighter.SliderBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        lamplighter:target="brightness"
        />
    <to.rcpt.lamplighter.SliderBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        lamplighter:target="temperature"
        />
</LinearLayout>